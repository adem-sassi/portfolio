{% extends "base.html.twig" %}

{% block title %}
    {{ parent() }}
    Accueil
{% endblock %}

{% block body %}
    <h1>Mes projets</h1>
    <div class="row">
        {% for project in projects %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{ asset('uploads/images/' ~ project.image) }}" class="card-img-top" alt="{{ project.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ project.name }}</h5>
                        <p class="card-text">{{ project.description }}</p>
                        <p class="card-text"><small class="text-muted">{{ project.date ? project.date|date('Y-m-d H:i:s') : '' }}</small></p>
                        <div class="btn-group" role="group" aria-label="Project Actions">
                            <a href="{{ path('delete', {'id': project.id}) }}" class="btn btn-danger">Delete</a>
                            <a href="{{ path('update', {'id': project.id}) }}" class="btn btn-primary">Update</a>
                            <a href="{{ path('read', {'id': project.id}) }}" class="btn btn-success">Read</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
    